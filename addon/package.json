{
    "name": "iases3",
    "version": "0.2.6",
    "description": "An extension for Thunderbird",
    "homepage": ".",
    "private": "true",
    "scripts": {
        "dev": "cd packages/browser-preview && pnpm run dev && cd ../..",
        "build": "pnpm build:deps && pnpm build:main",
        "build:deps": "pnpm --filter iframe-service --filter interface --filter thunderbird-iframe-service build",
        "build:main": "pnpm --filter browser-preview --filter thunderbird-extension build",
        "build-addon": "pnpm run build && rm -rf addon_build && cp -rL packages/thunderbird-extension/dist addon_build && cd addon_build && bestzip ../../../iases3@iase.one.xpi *",
        "package-sourcefiles": "./scripts/pack_source_code.sh",
        "bump": "./scripts/bump-version.sh",
        "pack": "pnpm run build-addon && echo \"\" && echo BUNDLING $(cat addon_build/manifest.json |grep '\"version\"') && pnpm run package-sourcefiles",
        "pack:clean": "pnpm clean && pnpm i && pnpm run pack",
        "check": "tsc",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "cd packages && pnpm exec eslint . && cd ..",
        "ca": "pnpm run check && pnpm run lint && pnpm run format:check",
        "find-unused-files": "pnpm exec tsx scripts/run-analyze.ts",
        "watch": "cd packages/interface && pnpm run watch && cd ../..",
        "watch:all": "pnpm exec tsx ./scripts/watch-build.ts packages",
        "upuk": "cp ../../../oss/ui-kit/ui-kit-0.2.2.tgz ../addon/vendor && pnpm add ../addon/vendor/ui-kit-0.2.2.tgz && pnpm run build",
        "clean": "./cleanProject.sh",
        "test": "vitest packages/*"
    },
    "dependencies": {
        "@floating-ui/react": "^0.27.13",
        "@tanstack/react-query": "^5.71.5",
        "@zip.js/zip.js": "^2.7.57",
        "classnames": "2.5.1",
        "easy-peasy": "^6.1.0",
        "jschardet": "^3.1.4",
        "papaparse": "^5.5.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-error-boundary": "^5.0.0",
        "react-focus-lock": "^2.13.6",
        "react-localization": "^2.0.6",
        "react-toastify": "^11.0.5",
        "styled-components": "^6.1.15",
        "ui-kit": "file:./vendor/ui-kit-0.2.1.tgz",
        "xlsx": "file:./vendor/xlsx-0.20.3.tgz"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22.13.4",
        "@types/papaparse": "^5.3.15",
        "@types/react": "^19.1.0",
        "@types/react-dom": "^19.1.1",
        "@types/thunderbird-webext-browser": "^127.0.0",
        "@vitejs/plugin-react": "^5.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "bestzip": "^2.2.1",
        "eslint": "^9.22.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.26.1",
        "unplugin-dts": "1.0.0-beta.6",
        "vite": "7.1.11",
        "vite-plugin-static-copy": "^3.1.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^4.0.12"
    },
    "browserslist": [
        "firefox >= 91"
    ]
}
