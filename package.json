{
  "name": "iases3-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "IASES3 unified workspace",
  "scripts": {
    "build": "pnpm -r build",
    "dev:addon": "cd addon && pnpm run watch",
    "dev:webapp": "cd webapp/frontend && pnpm dev",
    "build:addon": "cd addon && pnpm run build",
    "build:webapp": "cd webapp/frontend && pnpm build",
    "build:shared": "cd addon/packages/shared-ui && pnpm run build",
    "watch:shared": "cd addon/packages/shared-ui && pnpm run watch",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "install:all": "pnpm install",
    "check": "pnpm -r check"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "@vitejs/plugin-react": "^4.6.0",
    "pnpm": "^9.0.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-singlefile": "^2.1.0",
    "vite-plugin-static-copy": "^2.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
